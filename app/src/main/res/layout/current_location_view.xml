<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:layout_editor_absoluteX="70dp"
    tools:layout_editor_absoluteY="123dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Current Location"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/current_weather_card"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/secondaryDark"
        app:strokeColor="@color/primaryLight">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingRight="5dp"
                        android:src="@drawable/marker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/current_city"
                        android:text="Maputo,"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#707070"
                        android:id="@+id/current_country"
                        android:text="Mozambique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/current_weather_icon"
                    android:src="@drawable/cloud"
                    android:layout_width="85dp"
                    android:layout_height="85dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/current_temp"
                        android:text="18Â°C"
                        android:textSize="42dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:paddingRight="8dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/water_drop"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView

                                android:id="@+id/current_humidity"
                                android:text="27%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:paddingBottom="4dp"
                            android:paddingRight="5dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="RF"
                                android:textStyle="bold"
                                android:paddingRight="1dp"
                                android:textColor="@color/primaryLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/current_real_feel"
                                android:text="27%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/wind"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:id="@+id/current_wind"
                                android:text="27%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>